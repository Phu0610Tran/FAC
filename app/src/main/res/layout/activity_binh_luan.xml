<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/scrollV"
    android:layout_height="match_parent"
    tools:context=".PHUHUYNH.BinhLuanActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/nentren"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/quaylai_binhluan"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/quaylai"/>
            <ImageView
                android:layout_gravity="center_vertical|right"
                android:layout_margin="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/bachamphai"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/like"/>
                <TextView
                    android:id="@+id/Solike"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số like"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/dislike"/>
                <TextView
                    android:id="@+id/Sodislike"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số like"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_mode_comment_24"/>
                <TextView
                    android:id="@+id/socmt"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số like"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:background="@drawable/backgroup"
            android:layout_height="650dp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rec_Binhluan"
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="0dp"/>
            <LinearLayout
                android:layout_marginTop="600dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/edt_noidungbl"
                    android:layout_width="250dp"
                    android:background="@drawable/custom_cautraloi"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:hint="Nhập câu bình luận"
                    />
                <Button
                    android:id="@+id/btn_GuiBl"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="GỬI"
                    android:background="@drawable/custom_button_vang"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:backgroundTint="#FF9800"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>