<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroup"
    tools:context=".HomeActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:src="@drawable/logo"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/img_tk_home"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/user"/>
            <TextView
                android:id="@+id/tentk_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trần Trọng Phú"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_gravity="center"/>


        </LinearLayout>

    </FrameLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/nau"
        android:text="HOME"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <Button
            android:id="@+id/vctc"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:text="VUI CÙNG TÀI CHÍNH"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/custom_button_vang"
            android:layout_gravity="center"/>
        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:text="TRỢ LÝ TÀI CHÍNH"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/custom_button_vang"
            android:layout_gravity="center"/>
        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:text="SỔ TIẾT KIỆM"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/custom_button_vang"
            android:layout_gravity="center"/>
        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:text="HỖ TRỢ KHÁCH HÀNG"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/custom_button_vang"
            android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>