<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PHUHUYNH.BangtinFac_Activity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/nentren"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/quaylaibantin"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/quaylai"/>
        <ImageView
            android:layout_gravity="center_vertical|right"
            android:layout_margin="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/bachamphai"/>
        <ImageView
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/bantinfac_nentren"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/backgroup"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <GridView

            android:id="@+id/gridview_bangtin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:numColumns="1" />
    </LinearLayout>


</LinearLayout>