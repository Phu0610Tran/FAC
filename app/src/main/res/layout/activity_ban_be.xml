<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bxh_bg"
    tools:context=".VUICUNGTAICHINH.BanBeActivity">
    <ImageView
        android:id="@+id/quaylai_banbe"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:padding="10dp"
        android:layout_gravity="left"
        android:src="@drawable/quaylai" />
    <ImageView
        android:id="@+id/search_banbe"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:padding="10dp"
        android:layout_gravity="right"
        android:src="@drawable/person_search" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="BẠN BÈ"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"

            />
        <GridView
            android:layout_marginTop="80dp"
            android:id="@+id/gridviewBanBe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="1"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/vongbanbe" />
    </RelativeLayout>


</FrameLayout>